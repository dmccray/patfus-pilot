<h1>Listing questionnaire Sections</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questionnaire_sections.each do |questionnaire_section| %>
      <tr>
        <td><%= link_to 'Show', questionnaire_template_questionnaire_section(@qt, questionnaire_section) %></td>
        <td><%= link_to 'Edit', edit_questionnaire_template_questionnaire_section_path(@qt) %></td>
        <td><%= link_to 'Destroy', questionnaire_template_questionnaire_section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

